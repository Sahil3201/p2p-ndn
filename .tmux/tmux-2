tmux new-session -d -s livestocks
tmux new-window -n lone
tmux new-window -d -n ltemperature1
tmux new-window -d -n lRFID_Tag1
tmux new-window -d -n lheart_rate_monitor1
tmux new-window -d -n lmilk_production1
tmux new-window -d -n lconsumption_meter1
tmux new-window -d -n lproximity_meters1
tmux new-window -d -n lfeed_intake1
tmux new-window -d -n lactivity_monitor1
tmux send-keys -t livestocks:bash "echo Base Control" Enter
tmux send-keys -t livestocks:lone "python3 node.py --name /livestocks/livestock1" Enter
tmux send-keys -t livestocks:l1temperature "python3 node.py --name /livestocks/livestock1/temperature" Enter
tmux send-keys -t livestocks:l1RFID_Tag "python3 node.py --name /livestocks/livestock1/RFID_Tag" Enter
tmux send-keys -t livestocks:l1heart_rate_monitor "python3 node.py --name /livestocks/livestock1/heart_rate_monitor" Enter
tmux send-keys -t livestocks:l1milk_production "python3 node.py --name /livestocks/livestock1/milk_production" Enter
tmux send-keys -t livestocks:l1consumption_meter "python3 node.py --name /livestocks/livestock1/consumption_meter" Enter
tmux send-keys -t livestocks:l1proximity_meters "python3 node.py --name /livestocks/livestock1/proximity_meters" Enter
tmux send-keys -t livestocks:l1feed_intake "python3 node.py --name /livestocks/livestock1/feed_intake" Enter
tmux send-keys -t livestocks:l1activity_monitor "python3 node.py --name /livestocks/livestock1/activity_monitor" Enter

tmux new-session -d -s crops
tmux new-window -n cone
tmux new-window -d -n c1temperature
tmux new-window -d -n c1humidity
tmux new-window -d -n c1oxygen_level
tmux new-window -d -n c1ethylene_gas
tmux new-window -d -n c1carbon_dioxide
tmux new-window -d -n c1moisture_content
tmux new-window -d -n c1rain_gauge
tmux send-keys -t crops:bash "echo Base Control" Enter
tmux send-keys -t crops:cone "python3 node.py --name /crops/crop1" Enter
tmux send-keys -t crops:c1temperature "python3 node.py --name /crops/crop1/temperature" Enter
tmux send-keys -t crops:c1humidity "python3 node.py --name /crops/crop1/humidity" Enter
tmux send-keys -t crops:c1oxygen_level "python3 node.py --name /crops/crop1/oxygen_level" Enter
tmux send-keys -t crops:c1ethylene_gas "python3 node.py --name /crops/crop1/ethylene_gas" Enter
tmux send-keys -t crops:c1carbon_dioxide "python3 node.py --name /crops/crop1/carbon_dioxide" Enter
tmux send-keys -t crops:c1moisture_content "python3 node.py --name /crops/crop1/moisture_content" Enter
tmux send-keys -t crops:c1rain_gauge "python3 node.py --name /crops/crop1/rain_gauge" Enter
